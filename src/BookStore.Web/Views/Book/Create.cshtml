@using BookStore.Web.ViewModels;
@model BookCreateViewModel;

@{
    ViewData["Title"] = "Create";
}


<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Book.Name" class="control-label">Name</label>
                <input asp-for="@Model.Book.Name" class="form-control" />
                <span asp-validation-for="@Model.Book.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Book.Price" class="control-label">Price</label>
                <input asp-for="@Model.Book.Price" class="form-control" />
                <span asp-validation-for="@Model.Book.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Book.Author" class="control-label">Author</label>
                <select asp-for=@Model.Book.AuthorId class="form-select form-select-sm" aria-label="Small select example">
                    <option selected>Open this select menu</option>
                    @foreach(var author in Model.Authors)
                    {
                        <option value=@author.Id>@author.FullName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Book.Genre" class="control-label">Genre</label>
                <select asp-for=@Model.Book.GenreId class="form-select form-select-sm" aria-label="Small select example">
                    <option selected>Open this select menu</option>
                    @foreach (var genre in Model.Genres)
                    {
                        <option value=@genre.Id>@genre.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}